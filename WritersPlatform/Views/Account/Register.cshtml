@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Регистрация</h2>
<div class="text-danger" asp-validation-summary="All"></div>

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="Register" method="post" asp-anti-forgery="true">
                <div class="form-floating">
                    <label class="form-label" asp-for="UserName">Имя пользователя</label>
                    <input class="form-control" autocomplete="username" type="username" asp-for="UserName" value="" required />
                    <span class="text-danger field-validation-valid"></span>
                </div>
                <div class="form-floating">
                    <label class="form-label" asp-for="Email">Почта</label>
                    <input class="form-control" autocomplete="email" type="email" asp-for="Email" value="" required />
                    <span class="text-danger field-validation-valid"></span>
                </div>
                <div class="form-floating">
                    <label class="form-label" asp-for="Password">Пароль</label>
                    <input class="form-control" type="password" asp-for="Password" required />
                    <span class="text-danger field-validation-valid"></span>
                </div>
                <div class="form-floating">
                    <label class="form-label" asp-for="ConfirmPassword">Подтверждение пароля</label>
                    <input class="form-control" type="password" asp-for="ConfirmPassword" required />
                    <span class="text-danger field-validation-valid"></span>
                </div>
                <div style="margin-top: 20px;">
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Регистрация</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Используйте другие сервисы для входа</h3>
            <div>
                <a class="btn btn-info" asp-action="GoogleLogin">Войти с помощью Google</a>
            </div>
        </section>
    </div>
</div>