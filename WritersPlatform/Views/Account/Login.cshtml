@model WritersPlatform.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Вход</h1>
<div class="text-danger" asp-validation-summary="All"></div>

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="Login" method="post">
                <hr/>
                <input type="hidden" asp-for="ReturnUrl"/>
                <div class="form-floating">
                    <label class="form-label" asp-for="Email">Почта</label>
                    <input class="form-control" autocomplete="username" type="email" asp-for="Email" required />
                    <span class="text-danger field-validation-valid" asp-validation-for="Email"/>
                </div>
                <div class="form-floating">
                    <label class="form-label" asp-for="Password">Пароль</label>
                    <input class="form-control" autocomplete="current-password" type="password" asp-for="Password" required />
                    <span class="text-danger field-validation-valid" asp-validation-for="Password"/>
                </div>
                <div>
                    <div class="checkbox">
                        <label class="form-label" asp-for="Remember">
                            <input class="form-check-input" type="checkbox" asp-for="Remember"/>
                            Запомнить меня?
                        </label>
                    </div>
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Используйте другие сервисы для входа</h3>
            <div>
                <a class="btn btn-info" asp-action="GoogleLogin">Войти с помощью Google</a>
            </div>
        </section>
    </div>
</div>