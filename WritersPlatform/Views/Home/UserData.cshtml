@model ProfileModel
@{
    ViewData["Title"] = "Профиль";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <strong>Информация о профиле</strong>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label"><strong>Имя пользователя:</strong></label>
                <p>@Model.UserName</p>
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Email:</strong></label>
                <p>@Model.Email</p>
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Роль:</strong></label>
                <p>User</p> <!-- Здесь можно заменить на соответствующую роль пользователя, если необходимо -->
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Delete" asp-controller="Account"
               class="btn btn-danger"
               onclick="return confirm('Вы уверены, что хотите удалить этот профиль?')">Удалить профиль</a>
        </div>
    </div>
</div>



